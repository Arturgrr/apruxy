// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              BigInt @id
  commandsCounter Int    @default(0)
  vip             String @default("false")

  //Economy
  money     Int      @default(0)
  lastDaily DateTime @default(dbgenerated("now() - interval '24 hours'"))
}

model Guild {
  id              BigInt @id
  commandsCounter Int    @default(0)
}
